<div class="devise-layout">
  <h2 class="devise-heading">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "devise-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div>
      <div class="flex items-center justify-between">
        <%= f.label :password, "New password", class: "devise-label" %>

        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>

      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "devise-input" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Confirm new password", class: "devise-label" %>

      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "devise-input" %>
    </div>

    <div>
      <%= f.submit "Change my password", class: "devise-button devise-button-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
