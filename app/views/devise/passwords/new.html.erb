<div class="devise-layout">
  <h2 class="devise-heading">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "devise-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: "devise-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-input" %>
    </div>

    <div>
      <%= f.submit "Send me reset password instructions", class: "devise-button devise-button-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
