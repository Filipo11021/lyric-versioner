<div class="devise-layout">
  <h2 class="devise-heading">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "devise-form" }) do |f| %>
    <% if alert %>
      <div class="devise-error"><%= alert %></div>
    <% end %>

    <% if notice %>
      <div class="devise-notice"><%= notice %></div>
    <% end %>

    <%= render "devise/shared/text_field", 
    f: f, 
    name: :email, 
    type: :email_field, 
    autocomplete: "email",
    autofocus: true %>

    <div>
      <div class="flex items-center justify-between">
        <%= f.label :password, class: "devise-label" %>

        <% if @minimum_password_length %>
          <span class="text-gray-500 text-xs">
            (<%= @minimum_password_length %> characters minimum)
          </span>
        <% end %>
      </div>

      <%= f.password_field :password, autocomplete: "new-password", class: "devise-input" %>

      <%= render "devise/shared/field_error", name: :password %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "devise-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "devise-input" %>

      <%= render "devise/shared/field_error", name: :password_confirmation %>
    </div>

    <div>
      <%= f.submit "Sign up", class: "devise-button devise-button-primary" %>
    </div>

    <%= render "devise/shared/links" %>
  <% end %>
</div>
