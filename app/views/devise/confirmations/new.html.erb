<div class="devise-layout">
  <h2 class="devise-heading">Resend confirmation instructions</h2>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "devise-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: "devise-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "devise-input" %>
    </div>

    <div>
      <%= f.submit "Resend confirmation instructions", class: "devise-button devise-button-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
