<%# locals: (song:) %>
<div id="new_song_form">
  <%= form_with model: song, url: songs_path, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :title, "Song Title", class: "block text-sm font-medium text-gray-700 mb-1" %>

      <%= f.text_field :title, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          placeholder: "Enter song title",
          autofocus: true,
          required: false %>

      <% if song.errors[:title].any? %>
        <p class="mt-1 text-sm text-red-600">
          <%= song.errors[:title].first %>
        </p>
      <% end %>
    </div>

    <div class="flex justify-end gap-3 pt-2">
      <button
        type="button"
        onclick="this.closest('dialog').close()"
        class="
          px-4 py-2 text-sm font-medium text-gray-700 bg-white border
          border-gray-300 rounded-md hover:bg-gray-50
        "
      >
        Cancel
      </button>

      <%= f.submit "Create Song", class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 cursor-pointer" %>
    </div>
  <% end %>
</div>
