<header class="container mx-auto p-6 flex justify-end">
  <%= render "shared/logout_button" %>
</header>

<main class="container mx-auto md:mt-28 px-6 py-8">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Songs</h1>

    <button
      onclick="document.getElementById('new-song-dialog').showModal()"
      class="
        px-4 py-2 text-sm font-medium text-white bg-blue-500 rounded-md
        hover:bg-blue-600
      "
    >
      + New Song
    </button>
  </div>

  <% if @songs.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <%= render partial: "songs/card", collection: @songs, as: :song %>
    </div>
  <% else %>
    <div class="flex flex-col items-center justify-center py-24 text-center max-w-sm mx-auto">
      <div class="size-16 text-gray-300 mb-6">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="m9 9 10.5-3m0 6.553v3.75a2.25 2.25 0 0 1-1.632 2.163l-1.32.377a1.803 1.803 0 1 1-.99-3.467l2.31-.66a2.25 2.25 0 0 0 1.632-2.163Zm0 0V2.25L9 5.25v10.303m0 0v3.75a2.25 2.25 0 0 1-1.632 2.163l-1.32.377a1.803 1.803 0 0 1-.99-3.467l2.31-.66A2.25 2.25 0 0 0 9 15.553Z" />
        </svg>
      </div>
      <h2 class="text-xl font-semibold text-gray-700 mb-2">No songs yet</h2>
      <p class="text-gray-500">Get started by creating your first song to begin versioning your lyrics.</p>
    </div>
  <% end %>
</main>

<dialog
  id="new-song-dialog"
  class="m-auto p-6 rounded-lg shadow-xl backdrop:bg-black/50 w-full max-w-md"
>
  <h2 class="text-xl font-semibold text-gray-900 mb-4">Create New Song</h2>
  <%= render "songs/new_song_form", song: Song.new %>
</dialog>
